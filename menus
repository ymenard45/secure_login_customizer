			die('Security check');
		}

		// Update options
		$options['qr_info_url'] = isset($_POST['secure_login_customizer_options']['qr_info_url']) ? sanitize_text_field($_POST['secure_login_customizer_options']['qr_info_url']) : '';
		$options['secret_info_url'] = isset($_POST['secure_login_customizer_options']['secret_info_url']) ? sanitize_text_field($_POST['secure_login_customizer_options']['secret_info_url']) : '';
		$options['deactivate_info_url'] = isset($_POST['secure_login_customizer_options']['deactivate_info_url']) ? sanitize_text_field($_POST['secure_login_customizer_options']['deactivate_info_url']) : '';

		// Save options
